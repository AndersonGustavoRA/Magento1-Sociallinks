<layout version="1.0">
	<andersongustavo_sociallinks>
		<reference>
			<block type="sociallinks/sociallinks" name="sociallinks" template="sociallinks/sociallinks.phtml"/>
		</reference>
	</andersongustavo_sociallinks>
	<catalog_product_view>
		<reference name="head">
			<action method="addItem"> <type>skin_css</type> <file>css/rrssb.css</file> </action>
			<action method="addItem"> <type>skin_js</type> <file>js/rrssb.min.js</file> </action>
		</reference>
		<reference name="product.info.extrahint">
			<block type="sociallinks/sociallinks" name="sociallinks" template="sociallinks/sociallinks.phtml"/>
		</reference>
	</catalog_product_view>
	<default>
		<reference name="head">
			<block type="sociallinks/sociallinks" name="socialmeta" template="page/html/socialmeta.phtml"/>
		</reference>
	</default>
</layout>